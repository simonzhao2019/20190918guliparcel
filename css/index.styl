@import "reset.styl"
@import "mixins.styl"
@import "variables.styl"


#app
  height 100%
  #content
    position relative
    height 100%
    .page
      position absolute
      left 0
      top 0
      height 100%
      width 100%
      padding 45px 0 50px
      box-sizing boder-box
      display none
      &.active
        display block
      .header
        position fixed
        left 0
        top 0
        height 45px
        width 100%
        z-index 20
        background $primary-color
        color #fff
        display flex
        justify-content space-around
        align-items center
        .header-search
          font-size 25px
        .address
          font-size 20px
          width 188px
          white-space nowrap
          text-overflow ellipsis
          overflow hidden
        .btn
          a
            color #ffffff
            font-size 15px
      .swiper-container
        width 100%
        height 235px
        box-sizing border-box
        margin-bottom 15px
        border-1px(red,bottom)
        .swiper-item
          display flex
          flex-wrap wrap
          a
            height 72px
            width 25%
            display flex
            flex-direction column
            align-items center
            justify-content space-between
            img
              width 50px
              height 50px
              span
                font-size 13px
                color #666
      .shopmenu
        height 500px
        box-sizing border-box
        padding 0 13px 0 15px
        width 100%
        .vicinityshop
          height 40px
          width 100%
          display flex
          align-items center
          h2
            color #999
            font-size 14px
            margin-left 3px
        .shop-container
          height 420px
          margin-bottom: 50px
          .shoplist
            height 420px
            .shopitem
              height 105px
              border-1px(red,bottom)
              a
                display block
                padding 15px
                height 100%
                box-sizing border-box
                display flex
                .shopleft
                  width 23%
                  height 75px
                  margin-right 10px
                  img
                    height 100%
                    display block
                .shopright
                  width 77%
                  .shop-detail-header
                    display flex
                    justify-content space-between
                    align-items center
                    .shopname
                      width 140px
                      color: #333
                      font-size 14px
                      white-space nowrap
                      text-overflow ellipsis
                      overflow hidden
                      &::before
                        content  '品牌'
                        display  inline-block
                        font-size 12px
                        color  #333
                        background-color  #ffd930
                        padding  2px 2px
                        border-radius  2px
                    .shoppromise
                      display inline
                      color #999
                      font-size 10px
                      border 1px solid #f1f1f1
                      border-radius 2px
                  .shop-detail-middle
                    display flex
                    justify-content space-between
                    margin 18px 0 8px
                    .ratemenu
                      display flex
                      .starts
                        display flex
                        span
                          margin-right 3px
                          width 10px
                          height 10px
                          image-bg('../images/stars/star_off', '.png')
                          background-size 100% 100%
                          &.on
                            image-bg('../images/stars/star_on', '.png')
                          &.half
                            image-bg('../images/stars/star_half', '.png')
                      .rating
                        font-size 12px
                        color #f60
                      .salenumber
                        font-size 10px
                        margin-right 4px
                        transform scale(0.8)
                    .delivery
                      display flex
                      font-size 12px
                      justify-content space-between
                      transform scale(.7)
                      transform-origin 78px 0
                      .deliveryleft
                        color #fff
                        border 1px solid #02a774
                        margin-right 4px
                        background #02a774
                      .deliveryright
                        color: #02a774;
                        border: 1px solid #02a774;
                  .deliveryprice
                    span
                      font-size 12px
                      transform scale(.7)
    .search
      background-color  #f5f5f
      .search-title
        position fixed
        left 0
        top 0
        height 45px
        width 100%
        background-color $primary-color
        text-align center
        font-size 22px
        line-height 45px
        color white
      .search-form
        background-color #fff
        padding 12px 8px
        display flex
        justify-content space-between
        .search-content
          width 79%
          height 45px
          outline:none
          border-radius 3%
          background-color #f5f5f5
          &::-webkit-input-placeholder
            color slategray
            font-size 16px
        .search-btn
          width 18%
          background-color $primary-color
          border none
  #footer
    border-1px(red,top)
    position fixed
    z-index 20
    left 0
    bottom 0
    width 100%
    height 50px
    color #7e8c8d
    background white
    display flex
    justify-content space-around
    .footer-table
      display flex
      flex-direction column
      justify-content space-around
      align-items center
      &.active
       color $primary-color
      .iconfont
        font-size 22px
        margin 5px 0
      .footer-table-text
        font-size 12

